<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="15dp">

    <TextView
        android:text="Create Employee"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Employee Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="STRING DATA TYPE"
            android:id="@+id/etEmployeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Department: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="STRING DATA TYPE"
            android:id="@+id/etDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Monthly Salary: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="DOUBLE DATA TYPE"
            android:id="@+id/etMonthlySalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Manager Id: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="NUMERIC VALUE"
            android:id="@+id/etManagerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>