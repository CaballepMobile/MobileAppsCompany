<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Search: "
            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etUserName_MainActivity"
            android:hint="User name"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="Find"
            android:layout_weight="0.4"
            android:onClick="evtSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <WebView

        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:id="@+id/wvPhoto"
        android:layout_width="200dp"
        android:layout_height="175dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvUserName_MainActivity"
        android:text="USER NAME"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvName_MainActivity"
        android:text="NAME"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvLocation_MainActivity"
        android:text="LOCATION"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvBio_MainActivity"
        android:text="BIO"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvFollowers_MainActivity"
        android:text="FOLLOWERS"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>